<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constriaingroup1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/constriaingroup2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="A"
            android:textSize="30sp"
            android:gravity="center"
            android:background="#f20"
            android:id="@+id/textA"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textB"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:text="B"
            android:textSize="30sp"
            android:gravity="center"
            android:background="#70C60C"
            android:id="@+id/textB"
            app:layout_constraintTop_toBottomOf="@id/textA"
            app:layout_constraintBottom_toTopOf="@id/textC"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:text="C"
            android:textSize="30sp"
            android:gravity="center"
            android:background="#C6BF34"
            android:id="@+id/textC"
            app:layout_constraintTop_toBottomOf="@id/textB"
            app:layout_constraintBottom_toTopOf="@id/textD"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:text="D"
            android:textSize="30sp"
            android:gravity="center"
            android:background="#3454C6"
            android:id="@+id/textD"
            app:layout_constraintTop_toBottomOf="@id/textC"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constriaingroup2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constriaingroup1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="A"
            android:id="@+id/textA1"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textB1"
            android:textSize="30sp"
            android:background="#F2FA16"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="B"
            android:id="@+id/textB1"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/textA1"
            app:layout_constraintRight_toLeftOf="@id/textC1"
            android:textSize="30sp"
            android:background="#82836E"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="C"
            android:id="@+id/textC1"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/textB1"
            app:layout_constraintRight_toLeftOf="@id/textD1"
            android:textSize="30sp"
            android:background="#9556DA"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="D"
            android:id="@+id/textD1"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/textC1"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="30sp"
            android:background="#8A3852"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>